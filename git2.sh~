
if [ "$#" -lt 1 ] 
  then
  echo "No commit message given give one now"
  read a 
else
  a=$1
fi
if [ "$#" -eq 2 ] 
  then
  b=$2 
else
  b="master"
fi
git status
test()
{
  echo -n "Here be dragons. Continue?"
  read REPLY

  if [[ $REPLY =~ ^[Yy]$ ]]
  then
   git add -A;git commit -m "${a}";git pull origin $b;git push origin $b; break;;
  fi
}

test
